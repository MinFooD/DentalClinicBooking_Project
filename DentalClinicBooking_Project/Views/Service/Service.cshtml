@model DentalClinicBooking_Project.Models.ViewModels.ServiceAndClinic
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Service</title>
	<link href="~/css/service/service.css" rel="stylesheet" />
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
		  rel="stylesheet" />
</head>

<body>
	<div class="main-wraper">
		<div class="container">
			<nav class="homeService">
				<ul class="home">
					<li>
						<a asp-area="" asp-controller="Home" asp-action="HomePage">Trang chủ</a>
					</li>
					<li>
						<span class="separator">/</span>
					</li>
					<li>
						<a asp-area="" asp-controller="Service" asp-action="Service">Dịch vụ</a>
					</li>
				</ul>
			</nav>
			<div class="row flex-order">
				<div class="col-md-3">
					<div class="block-aside" s>
						<h4 class="tit-aside">dịch vụ nha khoa</h4>
						<ul class="dentistryService">
							@if (Model.services != null && Model.services.Any())
							{
								foreach (var item in Model.services)
								{
									<li class="">
										<a asp-area="" asp-controller="Service" asp-action="Service" asp-route-id="@item.ServiceId">
											<i class="fas fa-angle-right"></i>
											<span>
												@item.ServiceName
											</span>
										</a>
									</li>
								}
							}
						</ul>
					</div>
				</div>
				<div class="col-md-9">
					<div class="container-md">
						<div class="introBookClinic text-center">
							<h2 class="tit-aside">Đa dạng phòng khám</h2>
							<!-- <p style="text-align: center; white-space: nowrap; display: flex; justify-content: center; background-color: ;">
											Đặt khám dễ dàng và tiện lợi hơn với các phòng khám cùng nhiều chuyên khoa
										</p> -->
						</div>
					</div>

					<div class="container-md">
						@if (Model.clinics != null && Model.clinics.Any())
						{
							foreach (var item in Model.clinics)
							{
								<div class="phongKham">
									<div class="img-container">
										<img class="img"
											 alt="Phòng khám @item.ClinicName"
											 style="height:120px"
											 src=@item.MainImage />
									</div>
									<div class="line">
										<div>
											<a asp-area="" asp-controller="BookClinic" asp-action="ClinicDetails" asp-route-id="@item.ClinicId" style="color: black">@item.ClinicName</a>
											@foreach (var temp in item.Basics)
											{
												<p>@temp.Address</p>
												break;
											}

										</div>
									</div>
								</div>
							}
						}
					</div>
				</div>
				<!-- col-md-9 ở trên-->
			</div>
		</div>
	</div>

</body>
</html>