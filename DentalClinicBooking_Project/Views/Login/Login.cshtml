@model DentalClinicBooking_Project.Models.ViewModels.LoginVM
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Login</title>
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
		  rel="stylesheet" />
	<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
		  rel="stylesheet" />
	<link href="~/css/login/login.css" rel="stylesheet" />
</head>
<body>
	<div class="background"></div>
	<div class="container mx-auto mt-8">
		<div class="flex flex-col md:flex-row items-center justify-center space-x-0 md:space-x-60">
			<div class="w-full md:w-1/3 mb-8 md:mb-0"
				 style="width: 550px; height: 450px">
				<img style="border-radius: 50px; height: 100%; width: 100%"
					 src="https://alonadecor.com/wp-content/uploads/2017/09/alona41-1024x576.jpg"
					 alt="Ảnh phòng khám"
					 class="w-full rounded-md shadow-md" />
			</div>
			<div class="form-container" style="margin-left: 150px">
				@if (TempData["Success"] != null)
				{
					<div class="alert alert-success">@TempData["Success"]</div>
				}
				@if (ViewData.ModelState.ContainsKey("Fail"))
				{
					<div class="alert alert-danger">@ViewData.ModelState["Fail"].Errors[0].ErrorMessage</div>
				}
				@if (ViewData.ModelState.ContainsKey("General"))
				{
					<div class="alert alert-danger">@ViewData.ModelState["General"].Errors[0].ErrorMessage</div>
				}
				@if (ViewData.ModelState.ContainsKey("Success"))
				{
					<div class="alert alert-success">@ViewData.ModelState["Success"].Errors[0].ErrorMessage</div>
				}


				<form id="login-form" asp-area="" asp-controller="Login" asp-action="Login" method="post">
					<div class="title">Đăng Nhập</div>
					<div class="des">Đăng nhập để sử dụng dịch vụ của phòng khám</div>
					<div class="group">
						<span style="pointer-events: none; opacity: 0.5;">👤</span>
						<input type="text" id="loginEmail" placeholder="Tên đăng nhập" asp-for="UserName" required/>
						<span class="text-danger" asp-validation-for="UserName"></span>
					</div>
					<div class="group">
						<span style="margin-left:2px">
							<ion-icon name="lock-closed-outline"></ion-icon>
						</span>
						<input type="password"
							   id="loginPassword"
							   placeholder="Mật khẩu" asp-for="Password" required minlength="6" />
						<span class="text-danger" asp-validation-for="Password"></span>
					</div>
					
			

					<div class="recovery">
						@* <div class="checkbox">
							<input type="checkbox" id="rememberMe" />
							<label for="rememberMe">Ghi nhớ đăng nhập</label>
						</div> *@
						<a asp-area="" asp-controller="Patient" asp-action="ForgotPassword">Quên mật khẩu?</a>
					</div>
					
					<div class="signIn">
						<button style="submit">Đăng Nhập</button>
					</div>
					<div class="register">
						Bạn chưa có tài khoản?
						<a asp-area="" asp-controller="Login" asp-action="Register">Đăng kí ngay</a>
					</div>
				</form>
			</div>
		</div>
	</div>
	<script type="module"
			src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
	<script nomodule
			src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
	<script src="./script.js"></script>

</body>
</html>





