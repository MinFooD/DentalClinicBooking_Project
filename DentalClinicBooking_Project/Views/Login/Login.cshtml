                    <form id="login-form" asp-area="" asp-controller="Login" asp-action="Login" method="post">
                        <div class="title">Đăng Nhập</div>
                        <div class="des">Đăng nhập để sử dụng dịch vụ của phòng khám</div>
                        <div class="group">
                            <span>
                                <ion-icon name="mail-outline"></ion-icon>
                            </span>
                            <input type="email" id="loginEmail" placeholder="Email" asp-for="Gmail"/>
                        </div>
                        <div class="group">
                            <span>
                                <ion-icon name="lock-closed-outline"></ion-icon>
                            </span>
                            <input type="password"
                                   id="loginPassword"
                                   placeholder="Mật khẩu" asp-for="Password" />
                        </div>
                        <div class="recovery">
                            <div class="checkbox">
                                <input type="checkbox" id="rememberMe" />
                                <label for="rememberMe">Ghi nhớ đăng nhập</label>
                            </div>
                            <a href="#" onclick="showForgotPasswordForm()">Quên mật khẩu?</a>
                        </div>
                        <div class="list">
                            <div class="item">
                                <img src="https://cdn1.iconfinder.com/data/icons/google-s-logo/150/Google_Icons-09-512.png"
                                     alt="Google Icon" />
                                <span>Đăng nhập với Gmail</span>
                            </div>
                        </div>
                        <div class="signIn">
                            <button style="submit">Đăng Nhập</button>
                        </div>
                        <div class="register">
                            Bạn chưa có tài khoản?
                            <a asp-area="" asp-controller="Login" asp-action="Register">Đăng kí ngay</a>
                        </div>
                    </form>

