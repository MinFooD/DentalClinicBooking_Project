@{
	Layout = "~/Views/Shared/_Layout1.cshtml";
}
@model DentalClinicBooking_Project.Models.ViewModels.BasicViewModel.BasicVM
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Document</title>
	<link rel="stylesheet"
		  href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

	<link rel="stylesheet"
		  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
	<link href="~/css/basic/addbasic.css" rel="stylesheet" />
	<script src="~/js/basic/addbasic.js"></script>
</head>
<body>
	<div>
		<div class="background"></div>
		<div class="container" style="margin-top: 50px; margin-bottom:50px">
			<div id="basic-form-container" class="form-container">
				<div style="display: flex; justify-content: space-between">
					<h2 style="margin-bottom: 20px">Add Basic</h2>
				</div>
				<div id="additional-basic-forms">
					<!-- <div class="toggle-icon" onclick="toggleForm(this)">
					  &#9660;

					</div> -->
					<div class="basic-form" style="height: 100%">
						<form class="form-basic" asp-area="" asp-controller="Basic" asp-action="AddBasic">
							<div class="form-group">
								<label for="edit-workplace-name">Tên Cơ Sở:</label>
								<input type="text"
									   class="form-control"
									   id="edit-workplace-name"
									   placeholder="Nhập tên cơ sở"
									   asp-for="BasicName" />
							</div>
							<div class="form-group">
								<label for="edit-workplace-address">Địa Chỉ:</label>
								<input type="text"
									   class="form-control"
									   id="edit-workplace-address"
									   placeholder="Nhập địa chỉ"
									   asp-for="Address" />
							</div>
							<div class="form-group">
								<label for="edit-phone-address">SĐT:</label>
								<input type="text"
									   class="form-control"
									   id="edit-workplace-address"
									   placeholder="Nhập số điện thoại"
									   asp-for="Phone" />
							</div>
							<div class="form-group">
								<label for="clinic-id">Phòng khám:</label>
								@* <input type="text"
								readonly
								class="form-control"
								id="edit-workplace-address"
								placeholder="Nhập số điện thoại"
								asp-for="ClinicId" /> *@
								<select class="form-control" asp-for="ClinicId">
									@foreach (var basic in Model.clicics)
									{
										<option value="@basic.ClinicId">@basic.ClinicName</option>
									}
								</select>
							</div>
							<div>
								<button type="submit" class="btn btn-primary">
									Save
								</button>
								<button type="button" onclick="back('@Model.ClinicId')" class="btn btn-primary">
									Back
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
