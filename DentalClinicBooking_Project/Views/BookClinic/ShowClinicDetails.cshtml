    <div class="image-container">
      <button class="prev" onclick="prevImage()">&#10094;</button>
      <img id="mainImage"
        src="https://cdn.youmed.vn/tin-tuc/wp-content/uploads/2022/07/YouMed-Ung-dung-dat-kham-dat-thuoc.jpg"
        alt="Ảnh" />
      <button class="next" onclick="nextImage()">&#10095;</button>
    </div>

    <script>
      let currentImageIndex = 0;
      const images = [
        "https://cdn.youmed.vn/tin-tuc/wp-content/uploads/2022/07/YouMed-Ung-dung-dat-kham-dat-thuoc.jpg",
        "https://cdn.youmed.vn/tin-tuc/wp-content/uploads/2023/05/phan-mem-quan-ly-phong-kham.jpg",
        "https://cdn.youmed.vn/tin-tuc/wp-content/uploads/2020/07/Top-5-phong-kham-da-day-uy-tin-tai-TPHCM.jpg"
      ];

      function prevImage() {
        currentImageIndex = (currentImageIndex - 1 + images.length) % images.length;
        document.getElementById('mainImage').src = images[currentImageIndex];
      }

      function nextImage() {
        currentImageIndex = (currentImageIndex + 1) % images.length;
        document.getElementById('mainImage').src = images[currentImageIndex];
      }

      setInterval(nextImage, 3000); // Tự động chuyển ảnh sau mỗi 3 giây
    </script>


    <div>

      <style>
        .dropdown-content {
          display: none;
          position: absolute;
          background-color: #f9f9f9;
          max-width: 370px;
          box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
          z-index: 1;
          display: block;
          width: 100%;
          margin-left: 22rem;
        }

        .dropdown-content a {
          color: black;
          padding: 12px 16px;
          text-decoration: none;
          display: block;
          font-weight: 600;
          border-radius: 0.4rem;
          border-bottom: 1px solid #F1F5F9;
        }

        .dropdown-content a:hover {
          color: white;
          background: #00b7ff;
          box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        }
      </style>

      <div class="dropdown">
        <button class="quickBooking" style="margin-left: 22rem" onclick="toggleDropdown()">Đặt khám ngay</button>
        <div id="dropdownOptions" class="dropdown-content">
          <a href="#" onclick="bookAppointment('clinic')">Đặt khám phòng khám</a>
          <a href="#" onclick="bookAppointment('regular')">Đặt khám định kỳ</a>
        </div>
      </div>

      <script>
        function toggleDropdown() {
          var dropdown = document.getElementById("dropdownOptions");
          if (dropdown.style.display === "none") {
            dropdown.style.display = "block";
          } else {
            dropdown.style.display = "none";
          }
        }

        function bookAppointment(type) {
          console.log('Đặt khám loại: ' + type);
          closeDropdown();
          // Thêm mã để xử lý đặt khám
        }

        function closeDropdown() {
          var dropdown = document.getElementById("dropdownOptions");
          dropdown.style.display = "none";
        }

        // Đảm bảo dropdown đóng khi trang được tải lại
        window.onload = function () {
          closeDropdown();
        }
      </script>



    </div>
    <div class="row information">
      <div class="col-md-6 info1" style="padding-left: 8rem; margin-bottom: 2rem;">
