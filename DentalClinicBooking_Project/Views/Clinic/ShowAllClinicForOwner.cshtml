@model List<DentalClinicBooking_Project.Models.Domain.Clinic>
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Clinic List</title>
	<link href="~/css/clinic/showallclinicforowner.css" rel="stylesheet" />
	<script src="~/js/clinic/showallclinicforowner.js"></script>
</head>
<body>
	<header>
		<h1>Clinic List</h1>
	</header>
	<main>
		<section id="clinic-list">
			@if (Model != null && Model.Any())
			{
				foreach (var clinic in Model)
				{
					<div class="clinic-card"
						 data-id="@clinic.ClinicId"
						 data-name="Clinic"
						 data-main-image-url="https://via.placeholder.com/300"
						 data-additional-images="https://via.placeholder.com/100,https://via.placeholder.com/100">
						<img src=@clinic.MainImage
							 alt="Clinic A"
							 class="main-image"
							 style="height:224px" />
						<div class="additional-images">
							@foreach (var image in clinic.ClinicImages)
							{
								<img src=@image.Image
									 alt="Additional Image 1" />
							}

						</div>
						<div class="card-content">
							<h2>@clinic.ClinicName</h2>
						</div>
						<div class="actions">
							<button class="edit">Edit Clinic</button>
							@* <button class="managebasic" onclick="openManageBasic('@clinic.ClinicId')">Manage Basic</button> *@
							<button class="delete" onclick="openDeleteModal('@clinic.ClinicId')">Delete</button>
						</div>
					</div>
				}
			}

			<!-- Repeat the above block for each clinic -->
		</section>
	</main>

	<!-- Delete Clinic Modal -->
	<div id="deleteClinicModal" class="modal">
		<div class="modal-content">
			<span class="close">&times;</span>
			<h2>Are you sure to delete this clinic?</h2>
			<button id="confirmDelete">Yes, delete</button>
			<button class="close">No, cancel</button>
		</div>
	</div>
</body>
</html>
